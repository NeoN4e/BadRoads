@model PagedList.IPagedList<BadRoads.Models.Point>
@using PagedList.Mvc;
@using PagedList;

<div id="resultSearch">
    @foreach (var item in Model)
    {
        <a href="/Point/PointInfo/@item.ID">
            <div class="grid">
                <div class="title">
                    <h3>@item.Defect на @item.GeoData.FullAddress</h3>
                </div>
                <div class="img">
                    @try
                    {
                        <img src="@item.Cover.Url"/>
                    }
                    catch (Exception)
                    {
                        <img src="../../Images/nophoto.png" />
                    }
                </div>
            </div>
        </a>
    }
    @Html.PagedListPager(Model, page => Url.Action("Gallery", new { page, flag = true }), new PagedListRenderOptions() { MaximumPageNumbersToDisplay = 5 })
</div>
