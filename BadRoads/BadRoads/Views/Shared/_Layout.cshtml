<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BadRoads - портал о плохих дорогах</title>
    <link href="~/Images/icon.png" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/scripts")

</head>
<body>
    <script type="text/javascript">

        function SubM() {
            var i = document.getElementById("lang");
            alert(i);
            $('#sub').click();
            $(".OptionValue [value=]").attr("selected", "selected");           
        }

    </script>

    <header id="menu">
        <div id="btnmenu" title="Меню">
            <i class="fa fa-bars fa-2x"></i>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <a href="/Point/Add">
                <div id="btnadd" title="Добавить место">
                    <i class="fa fa-plus fa-2x"></i>
                </div>
            </a>
        }
        @using (Html.BeginForm("ChangeCulture", "Home"))
        { 
            <select name="lang" id="lang" onchange="SubM()">
                @*<option>@Resources.Resource._Language</option>*@
                <option class="OptionValue" value="ru">RU</option>
                <option class="OptionValue" value="uk">UA</option>
                <option class="OptionValue" value="en">EN</option>
            </select>
            <input id="sub" type="submit" hidden>    
        }
        <div id="logo">
            <a href="/">
                <img src="~/Images/logo_badroads.png" alt="badroads"></a>
        </div>
        <form>
            <input class="search" type="text" placeholder=@Resources.Resource._Search>
            <input class="search" type="submit" value="GO">
        </form>
        <nav>
            <ul>
                <li>
                    @Html.Partial("_LoginPartial")
                </li>
                <li>
                    @Html.ActionLink(@Resources.Resource._Main, "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink(@Resources.Resource._Map, "Map", "Home")
                </li>
                <li>
                    @Html.ActionLink(@Resources.Resource._Galery, "Gallery", "Point")
                </li>
            </ul>
        </nav>
    </header>
    <div id="content">
        @RenderSection("featured", required: false)
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
