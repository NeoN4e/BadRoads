<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="cleartype" content="on">
    <title>BadRoads - портал о плохих дорогах</title>
    <link href="~/Images/icon.png" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/scripts")
</head>
<body>
    <header id="menu">
        <div id="btnmenu" title="Меню">
            <i class="fa fa-bars fa-2x"></i>
        </div>
        <select name="lang" id="lang">
            <option value="RU">RU</option>
            <option value="UK">UA</option>
            <option value="EN">EN</option>
        </select>
        <div id="logo">
            <a href="/"><img src="~/Images/logo_badroads.png" alt="badroads"></a>
        </div>
        <form>
            <input class="search" type="text" placeholder="Поиск">
            <input class="search" type="submit" value="GO">
        </form>
        <nav id="navmenu">
            <ul>
                <li>
                    <i class="fa fa-user"></i>
                    @Html.Partial("_LoginPartial")
                </li>
                <li>
                    <i class="fa fa-home"></i>
                    @Html.ActionLink("Главная", "Index", "Home")
                </li>
                <li>
                    <i class="fa fa-globe"></i>
                    <a href="#">Карта</a>
                </li>
                <li>
                    <i class="fa fa-picture-o"></i>
                    @Html.ActionLink("Галерея", "About", "Home")
                </li>
            </ul>
        </nav>
        <footer>
            <a href="#"><i class="fa fa-facebook fa-lg"></i></a>
            <a href="#"><i class="fa fa-google-plus fa-lg"></i></a>
            <a href="#"><i class="fa fa-vk fa-lg"></i></a>
        </footer>
    </header>
    <div id="content">
        @RenderSection("featured", required: false)
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
