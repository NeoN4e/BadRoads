<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BadRoads - портал о плохих дорогах</title>
    <link href="~/Images/icon.png" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/scripts")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#srch_input").autocomplete({
                source: "../../Point/Autocomplete",
                minLength: 2
            });

            $('#srch_clear').click(function () {
                $('#srch_input').focus();
                $('#srch_input').val('');
            });
        });
    </script>
</head>
<body>
    <header id="menu">
        <div id="btnmenu" title="Меню">
            <i class="fa fa-bars fa-2x"></i>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <a href="/Point/Add">
                <div id="btnadd" title="Добавить место">
                    <i class="fa fa-plus fa-2x"></i>
                </div>
            </a>
        }
        <select name="lang" id="lang">
            <option value="RU">RU</option>
            <option value="UK">UA</option>
            <option value="EN">EN</option>
        </select>
        <div id="logo">
            <a href="/">
                <img src="~/Images/logo_badroads.png" alt="badroads"></a>
        </div>
       <form action="@Url.Action("Search","Point")">
            <span id="srch_wrapper">
                <input class="search" name="searchText" type="text" placeholder="Поиск" id="srch_input">
                <span id="srch_clear">X</span>
            </span> 
            <input class="search" type="submit" value="GO">
        </form>
        <nav>
            <ul>
                <li>
                    @Html.Partial("_LoginPartial")
                </li>
                <li>
                    @Html.ActionLink("Главная", "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink("Карта", "Map", "Home")
                </li>
                <li>
                    @Html.ActionLink("Галерея", "Gallery", "Point")
                </li>
            </ul>
        </nav>
    </header>
    <div id="content">
        @RenderSection("featured", required: false)
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>