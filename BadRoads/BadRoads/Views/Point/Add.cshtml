@{
    ViewBag.Title = "Добавить";
}

@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)                   //создаю неотображаемые элементы для передачи через них данных в скрипт JS
    {

        <p data-latitude="@item.GeoData.Latitude" data-longitude="@item.GeoData.Longitude" data-adress="@item.GeoData.FullAddress" dat-id="@item.ID" class="points"></p>
    }
}


<div class="section group">
    <div class="col span_3_of_3">
        <h1 class="ct">@ViewBag.Title</h1>
    </div>
</div>
<div class="section group">
    <div class="col span_2_of_3">
        <h2 class="ct">Укажите место на карте</h2>
        <div class="map add">
            <div id="map_canvas"></div>
            @*<iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d10583.29542581696!2d35.05049895!3d48.4599091!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sru!2sua!4v1427901591485" width="100%" height="100%" frameborder="0" style="border: 0"></iframe>*@
        </div>
    </div>
    <div class="col span_1_of_3">
       @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
            <h2 class=" ct">
                Заполните данные
            </h2>
            <label class="f t">Адрес:</label>
            <input id="adresset" class="f" type="text" disabled />              @*адрес точки*@
            <label class="f t">Координаты:</label>
            <input id="latitude" class="f-2" type="text" disabled />            @*координаты - широта*@
            <input id="longitude" class="f-2" type="text" disabled />           @*координаты  - долгота*@
            <label class="f t">Выберите фото для загрузки:</label>
            <input class="f" type="file" multiple />
            <label class="f t">Выберите проблему:</label>
            <select class="sel f">




                @if (ViewBag.Problems != null && ViewBag.Problems.Count > 0)
                {
                    foreach (var item in ViewBag.Problems)
                    {
                        <option>@item.Name</option>
                    }

                }
            </select>
            <label class="f t">Дополнительное описание:</label>
            <textarea class="f ht" placeholder="или коментарий к фото"></textarea>
            <input id="subm" type="submit" value="Отправить" disabled />
       }
    </div>
</div>


@section Scripts {
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true&sensor=false&language=uk"></script>                                          @*подключение Google Maps API*@
    <script src="http://google-maps-utility-library-v3.googlecode.com/svn/trunk/markerclusterer/src/markerclusterer.js"></script>       @*подключение скрипта для кластеризации маркеров*@
    @Scripts.Render("~/Scripts/addpoint.js")
}  