@model BadRoads.Models.RegisterModel
@{
    ViewBag.Title = @Resources.Resource._Register;
}
<div class="section group hd"></div>
<div class="section group">
    <div class="col span_4_of_4">
        <h1 class="center_text">@ViewBag.Title</h1>
    </div>
</div>   
<div class="section group">
    <div class="col span_1_of_3 hd"></div>
    <div class="col span_1_of_3">
        <h2 class="center_text">@Resources.Resource._FillFieldsRegistration</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <ol>
                <li>
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                </li>
                <li>
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email)
                </li>
                <li>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                </li>
                <li>
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </li>
            </ol>
            <div class="center_block">
            <input type="submit" value=@Resources.Resource._EndRegister />
                </div>
        }      
        <div class="center_text">
             <h2 class="center_text">@Resources.Resource._RegisterSocialNetwork</h2>
            @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
        </div>
    </div>
    <div class="col span_1_of_3"></div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
