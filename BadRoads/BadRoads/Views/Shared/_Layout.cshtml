<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BadRoads - портал о плохих дорогах</title>
    <link href="~/Content/img/icon.png" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts/jquery-2.1.3.min.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.11.4.js")
    @Scripts.Render("~/Scripts/site.js")
</head>
<body>
    <header id="menu">
        <div id="btnmenu" title="Меню">
            <i class="fa fa-bars fa-2x"></i>
        </div>
        <select name="langlist" id="lang">
            <option selected value="RU">RU</option>
            <option value="UA">UA</option>
            <option value="EN">EN</option>
        </select>
        <div id="logo">
            <img src="~/Content/img/logo_badroads.png" alt="badroads">
        </div>
        <form action="">
            <input type="text" placeholder="Поиск">
            <input type="submit" value="GO">
        </form>
        <nav id="navmenu">
            <ul>
                <li>
                    <i class="fa fa-home"></i>
                    @Html.ActionLink("Главная", "Index", "Home")
                </li>
                <li>
                    <i class="fa fa-user"></i>
                    <a href="#">Профиль</a> | <a href="#">Гость</a>
                    @*           @Html.Partial("_LoginPartial")*@
                </li>
                <li>
                    <i class="fa fa-globe"></i>
                    <a href="#">Карта</a>
                </li>
                <li>
                    <i class="fa fa-picture-o"></i>
                    <a href="#">Фото</a>
                </li>
            </ul>
        </nav>
        <footer>
            <a href="#"><i class="fa fa-facebook fa-lg"></i></a>
            <a href="#"><i class="fa fa-google-plus fa-lg"></i></a>
            <a href="#"><i class="fa fa-vk fa-lg"></i></a>
        </footer>
    </header>
    <div id="content">
        @RenderSection("featured", required: false)
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
