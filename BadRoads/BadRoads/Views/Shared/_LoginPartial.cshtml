@if (Request.IsAuthenticated)
{
 <text>

    @Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" }) | 
   </text>
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a>
    }
}
else
{
 <text>
    @Html.ActionLink(@Resources.Resource._Register, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" }) | 
        @Html.ActionLink(@Resources.Resource._SignIn, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </text>
}
