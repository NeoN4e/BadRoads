@model BadRoads.Models.LoginModel
@{
    ViewBag.Title = "Войти";
}
<div class="section group">
    <div class="col span_2_of_3">
        <h1 class="centertext">@ViewBag.Title</h1> 
    </div>
</div>
<div class="section group">       
    <div class="col span_1_of_3">
        <h2 class="centertext">Введите логин и пароль</h2>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>
        </ol>
        <input type="submit" value="Войти" />
    <p>
        @Html.ActionLink("Регистрация", "Register")
    </p>
}
    </div>
    <div class="col span_1_of_3">
        <h2 class="centertext">Вы можете войти с помощью учетных записей социальных сетей</h2>
        @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
