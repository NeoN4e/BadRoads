@model IEnumerable<BadRoads.Models.Point>
@{
    ViewBag.Title = "Галерея";
}
<div class="section group">
    <div class="col span_4_of_4">
        <h1 class="ct">@ViewBag.Title</h1>
    </div>
</div>
<div class="section group">
    <div class="col span_1_of_5">
        <h2 class="ct">Фильтр</h2>
        @using (Ajax.BeginForm("Search", new AjaxOptions { UpdateTargetId = "resultSearch" }))
        {
            <input class="f" type="text" placeholder="Улица" />
            <input type="submit" value="Фильтровать" name="searchtext" />
        }
    </div>
    <div class="col span_4_of_5">
        @Html.Partial("Search")
    </div>
</div>

