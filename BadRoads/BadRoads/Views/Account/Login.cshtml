@model BadRoads.Models.LoginModel
@{
    ViewBag.Title = @Resources.Resource._SignIn;
}
<div class="section group hd"></div>
<div class="section group">
    <div class="col span_4_of_4">
        <h1 class="center_text">@ViewBag.Title</h1>
    </div>
</div>
<div class="section group">
    <div class="col span_1_of_3 hd"></div>
    <div class="col span_1_of_3">
        <h2 class="center_text">@Resources.Resource._EnterLoginPassword</h2>
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <ol>
                <li>
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                    @Html.ValidationMessageFor(m => m.UserName)
                </li>
                <li>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </li>
                <li>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                </li>
            </ol>
            <div class="center_block vis">
                <input type="submit" value="Войти" />
            <div class="center_block">
                <input type="submit" value=@Resources.Resource._SignIn />
                <p>
                    @Html.ActionLink(@Resources.Resource._Register, "Register")
                </p>
            </div>     
        }
        <h2 class="center_text">@Resources.Resource._EnterSocialAccount</h2>
        <div class="center_block">
            @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
